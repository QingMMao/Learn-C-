
#include<iostream>

void simon(int);    //在主函数前申明，具体实现放在主函数后
int stonetolb(int); //有返回值的函数

int main()
{
    using namespace std;    //如果所有函数都要用到cout，就放在所有函数前，如果只是某些函数用到，就放在特定函数中
    simon(3);

    cout<<"Input an integer:";
    int n;
    cin>>n;
    int res = stonetolb(14);
    cout<<"Anser:"<< res;

    return 0;
}

void simon(int n)
{
    using namespace std;
    cout<<n<<endl;
}

int stonetolb(int n)
{
    return 14*n;
}
