
/*
类定义描述数据格式及其用法，对象是根据数据格式规范创建的实体
*/

#include <iostream> //预处理器编译指令
#include<cmath> //用到特殊函数
int main() //函数头，和操作系统间的接口
{   //函数体
    using namespace std;    //编译指令
    cout<<"Hello world!"<<endl;  //输出，endl代表重起一行
    cout<<"Input an integer:"<<endl;
    int carrots;
    cin>>carrots;   //输入
    cout<<"I have "<< carrots <<" dogs."<<endl; //空格应该放在变量前后
    double x;
    x = sqrt(6.25);
    cout<<x;
    return 0;   //结束main函数的返回语句
}
